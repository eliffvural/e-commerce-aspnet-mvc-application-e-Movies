@model List<Dictionary<string, string>>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trending Movies</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Özel stil */
        .movie-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        ..movie-card img {
            width: 100%;
            height: auto;
        }

                .movie-card img:hover {
                    transform: scale(1.05);
                }
    </style>
</head>
<body>

    <div class="container my-5">
        <h1 class="text-center mb-4">Trending Movies</h1>
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 col-sm-6 col-12">
                    <div class="movie-card">
                        <h2 class="h5 text-primary">@movie["original_title"]</h2>
                        <p class="text-muted" style="font-size: 0.9rem;">@movie["overview"]</p>
                        <img src="@movie["poster_path"]" alt="@movie["original_title"]" class="img-fluid rounded" />
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS (Optional for interactivity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>